<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_margin="10dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        app:cardCornerRadius="20dp"
        android:padding="5dp"
        android:layout_margin="3dp"
        android:id="@+id/projectCard"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:layout_width="80dp"
        android:layout_height="80dp">
        <RelativeLayout
            android:id="@+id/newProjectLay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="1dp"
            android:translationZ="1dp">
            <ImageView
                android:id="@+id/coverImgId"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/back_grad_sec"
                android:scaleType="centerCrop"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textStyle="bold"
                android:id="@+id/projectShortTitle"
                android:fontFamily="@font/ubuntu_reg"
                android:textSize="28sp"
                android:text="CP"
                android:textColor="@android:color/white"/>
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:alpha="0.7"
                android:layout_marginStart="-20dp"
                android:layout_marginBottom="-23dp"
                android:src="@drawable/circleshape"/>
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:alpha="0.4"
                android:layout_marginEnd="-10dp"
                android:layout_marginTop="-10dp"
                android:src="@drawable/rectshape"/>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:padding="2dp"
        android:layout_below="@id/projectCard"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="80dp"
            android:text="Cyber Punk"
            android:id="@+id/projectFullTitle"
            android:gravity="center"
            android:fontFamily="@font/product_sans"
            android:textSize="14sp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:layout_width="80dp"
            android:text="Anshul"
            android:id="@+id/projectAdmin"
            android:layout_below="@id/projectFullTitle"
            android:textStyle="bold"
            android:gravity="center"
            android:fontFamily="@font/product_sans"
            android:textSize="12sp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>
</RelativeLayout>