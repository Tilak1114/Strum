<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="400dp">
    <androidx.cardview.widget.CardView
        app:cardCornerRadius="20dp"
        android:elevation="2dp"
        android:translationZ="2dp"
        android:layout_margin="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginBottom="20dp"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="30dp"
                android:id="@+id/mainPagerItemIcn"
                android:layout_height="30dp"
                android:layout_margin="20dp"
                android:src="@drawable/icn_personal"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/mainPagerItemPgBar"
                android:fontFamily="@font/ubuntu_reg"
                android:text="Personal"
                android:textColor="#47B2E4"
                android:id="@+id/mainPagerItemTitle"
                android:textSize="30sp"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/mainPagerItemTitle"
                android:text="15 Tasks"
                android:id="@+id/mainPagerItemSubtitle"
                android:fontFamily="@font/ubuntu_reg"
                android:textSize="16sp"
                android:layout_marginStart="20dp"/>
            <ProgressBar
                android:layout_width="match_parent"
                android:indeterminate="false"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:id="@+id/mainPagerItemPgBar"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="30dp"
                android:layout_height="7dp"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>