<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        app:cardCornerRadius="10dp"
        android:padding="2dp"
        android:layout_margin="5dp"
        android:id="@+id/personalTaskCard"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:layout_width="match_parent"
        android:layout_height="70dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <View
                android:layout_width="match_parent"
                android:elevation="1dp"
                android:visibility="invisible"
                android:id="@+id/strikeView"
                android:translationZ="1dp"
                android:layout_height="2dp"
                android:background="@android:color/black"
                android:layout_toLeftOf="@id/taskStatusCb"
                android:layout_centerInParent="true"
                android:layout_margin="20dp"/>
            <View
                android:layout_marginStart="30dp"
                android:layout_width="5dp"
                android:layout_marginTop="30dp"
                android:alpha="0.9"
                android:layout_centerVertical="true"
                android:id="@+id/priorityBadge"
                android:layout_height="match_parent"
                android:background="@android:color/holo_red_light"/>
            <LinearLayout
                android:layout_toRightOf="@id/priorityBadge"
                android:layout_marginStart="20dp"
                android:id="@+id/cardContentPersonal"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/personalDeadline"
                    android:fontFamily="@font/product_sans"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:layout_marginBottom="5dp"
                    android:text="Feb 6 2020"/>
                <TextView
                    android:textSize="18sp"
                    android:layout_width="wrap_content"
                    android:fontFamily="@font/product_sans"
                    android:id="@+id/persTaskName"
                    android:textColor="@android:color/black"
                    android:layout_height="wrap_content"
                    android:text="Get Milk"/>
            </LinearLayout>
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_centerVertical="true"
                style="@style/MyCheckbox"
                android:id="@+id/taskStatusCb"
                android:layout_height="wrap_content"
                android:checked="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="20dp"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>