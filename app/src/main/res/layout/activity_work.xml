<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/workLay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WorkActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/workTopbar"
        android:layout_height="60dp">
        <ImageView
            android:layout_width="20dp"
            android:alpha="0.9"
            android:elevation="1dp"
            android:translationZ="2dp"
            android:clickable="true"
            android:focusable="true"
            android:id="@+id/backwork"
            android:background="?attr/actionBarItemBackground"
            android:src="@drawable/ic_back_btn"
            android:tint="@android:color/black"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginStart="20dp"
        android:layout_marginEnd="10dp"
        android:id="@+id/workHeader"
        android:layout_width="match_parent"
        android:layout_below="@id/workTopbar"
        android:layout_height="wrap_content">
        <ImageView
            android:transitionName="cardIcn"
            android:layout_width="36dp"
            android:id="@+id/workactivityIcn"
            android:layout_height="36dp"
            android:layout_margin="20dp"
            android:src="@drawable/icn_work"
            />
        <TextView
            android:layout_width="wrap_content"
            android:transitionName="cardTitle"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ubuntu_reg"
            android:text="Work"
            android:layout_below="@id/workSubtitle"
            android:textColor="@color/workColor"
            android:id="@+id/workTitle"
            android:textSize="24sp"
            android:layout_marginStart="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:transitionName="cardSub"
            android:layout_below="@id/workactivityIcn"
            android:text="4/15 Tasks"
            android:layout_marginBottom="5dp"
            android:id="@+id/workSubtitle"
            android:fontFamily="@font/ubuntu_reg"
            android:textSize="14sp"
            android:layout_marginStart="20dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="25dp"
            android:layout_below="@id/workTitle"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <ProgressBar
                android:transitionName="cardPb"
                android:layout_weight="9"
                android:layout_width="wrap_content"
                android:indeterminate="false"
                android:layout_gravity="center_vertical"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:id="@+id/workPgBar"
                android:progressTint="@color/workColor"
                android:layout_marginEnd="3dp"
                android:layout_marginStart="25dp"
                android:layout_height="5dp"/>
            <TextView
                android:layout_weight="1"
                android:textStyle="bold"
                android:id="@+id/wprogressTv"
                android:fontFamily="@font/mons_reg"
                android:layout_width="wrap_content"
                android:text="0%"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="20dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_width="match_parent"
        android:layout_below="@id/workHeader"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:id="@+id/projecttv"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/product_sans"
            android:layout_marginStart="40dp"
            android:text="Projects ( 6 )"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/projectsRv"
            android:layout_width="match_parent"
            android:layout_below="@id/projecttv"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="30dp"
            android:layout_marginStart="20dp"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</RelativeLayout>