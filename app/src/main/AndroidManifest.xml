<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.strum.app">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true">
        <activity android:name=".activities.FirstActivity"
            android:theme="@style/Theme2">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.SignupActivity"
            android:theme="@style/Theme2" />
        <activity android:name=".activities.LoginActivity"
            android:theme="@style/Theme2" />
        <activity
            android:name=".activities.CreateTask"
            android:theme="@style/Theme2" />
        <activity
            android:name=".activities.ProjectDashboard"
            android:theme="@style/Theme2" />
        <activity
            android:name=".activities.WorkActivity"
            android:theme="@style/Theme2" />
        <activity
            android:name=".activities.PersonalActivity"
            android:theme="@style/Theme2" />
        <activity android:name=".activities.SplashScreen" />
        <activity
            android:name=".activities.MainActivity"
            android:theme="@style/AppTheme">
        </activity>
    </application>

</manifest>